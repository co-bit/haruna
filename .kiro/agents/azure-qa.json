{
  "name": "azure-qa",
  "description": "Azureオーケストレーター",
  "prompt": "Azureサービス別にサブエージェントを呼び出し、応答を統合してください。",
  "tools": ["read", "write", "subagent", "web"],
  "allowedTools": ["read", "write", "subagent", "web"],
  "toolsSettings": {
    "subagent": {
      "allowedAgents": ["azure-vm", "azure-storage", "azure-functions", "azure-ad"]
    },
    "write": {
      "allowedPaths": ["azure-qa-response.json"]
    }
  },
  "resources": [],
  "model": "claude-sonnet-4.5",
  "hooks": {
    "postToolUse": [
      {
        "matcher": "subagent",
        "command": "scripts/validate-json-response.sh",
        "description": "サブエージェント応答のJSON形式検証"
      }
    ],
    "stop": [
      {
        "command": "scripts/validate-orchestrator-response.sh",
        "description": "統合応答の形式検証"
      }
    ]
  }
}
