{
  "name": "aws-lambda",
  "description": "Lambda専門エージェント",
  "prompt": "Lambda、サーバーレス、Step Functions専門。JSON形式で応答すること。",
  "mcpServers": {
    "aws-docs": {
      "command": "uvx",
      "args": ["awslabs.aws-documentation-mcp-server@latest"],
      "env": { "FASTMCP_LOG_LEVEL": "ERROR" }
    },
    "aws-knowledge": {
      "command": "uvx",
      "args": ["fastmcp", "run", "https://knowledge-mcp.global.api.aws"],
      "env": {}
    }
  },
  "tools": ["read", "@aws-docs", "@aws-knowledge"],
  "allowedTools": ["read", "@aws-docs", "@aws-knowledge"],
  "resources": [
    "skill://.kiro/skills/aws/common/SKILL.md",
    "skill://.kiro/skills/aws/lambda/SKILL.md"
  ],
  "model": "claude-sonnet-4.5"
}
