{
  "name": "aws-ec2",
  "description": "EC2専門エージェント",
  "prompt": "EC2、EBS、ALB、Auto Scaling専門。JSON形式で応答すること。",
  "mcpServers": {
    "aws-docs": {
      "command": "uvx",
      "args": ["awslabs.aws-documentation-mcp-server@latest"],
      "env": { "FASTMCP_LOG_LEVEL": "ERROR" }
    },
    "aws-knowledge": {
      "command": "uvx",
      "args": ["fastmcp", "run", "https://knowledge-mcp.global.api.aws"],
      "env": {}
    }
  },
  "tools": ["read", "@aws-docs", "@aws-knowledge"],
  "allowedTools": ["read", "@aws-docs", "@aws-knowledge"],
  "resources": [
    "skill://.kiro/skills/aws/ec2/SKILL.md"
  ],
  "model": "claude-sonnet-4.5",
  "hooks": {
    "stop": [
      {
        "command": "scripts/validate-json-response.sh",
        "description": "JSON応答形式検証"
      }
    ]
  }
}
