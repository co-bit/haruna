{
  "name": "aws-qa",
  "description": "AWSオーケストレーター",
  "prompt": "AWSサービス別にサブエージェントを呼び出し、応答を統合してください。",
  "mcpServers": {
    "aws-docs": {
      "command": "uvx",
      "args": ["awslabs.aws-documentation-mcp-server@latest"],
      "env": { "FASTMCP_LOG_LEVEL": "ERROR" }
    },
    "aws-knowledge": {
      "command": "uvx",
      "args": ["fastmcp", "run", "https://knowledge-mcp.global.api.aws"],
      "env": {}
    }
  },
  "tools": ["read", "write", "subagent", "@aws-docs", "@aws-knowledge"],
  "allowedTools": ["read", "write", "subagent", "@aws-docs", "@aws-knowledge"],
  "toolsSettings": {
    "subagent": {
      "allowedAgents": ["aws-ec2", "aws-iam", "aws-s3", "aws-lambda"]
    },
    "write": {
      "allowedPaths": ["aws-qa-response.json"]
    }
  },
  "resources": [],
  "model": "claude-sonnet-4.5",
  "hooks": {
    "postToolUse": [
      {
        "matcher": "subagent",
        "command": "scripts/validate-json-response.sh",
        "description": "サブエージェント応答のJSON形式検証"
      }
    ],
    "stop": [
      {
        "command": "scripts/validate-orchestrator-response.sh",
        "description": "統合応答の形式検証"
      }
    ]
  }
}
