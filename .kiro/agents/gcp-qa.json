{
  "name": "gcp-qa",
  "description": "GCPオーケストレーター",
  "prompt": "GCPサービス別にサブエージェントを呼び出し、応答を統合してください。",
  "tools": ["read", "write", "subagent", "web"],
  "allowedTools": ["read", "write", "subagent", "web"],
  "toolsSettings": {
    "subagent": {
      "allowedAgents": ["gcp-compute", "gcp-storage", "gcp-functions", "gcp-iam"]
    },
    "write": {
      "allowedPaths": ["gcp-qa-response.json"]
    }
  },
  "resources": [],
  "model": "claude-sonnet-4.5",
  "hooks": {
    "postToolUse": [
      {
        "matcher": "subagent",
        "command": "scripts/validate-json-response.sh",
        "description": "サブエージェント応答のJSON形式検証"
      }
    ],
    "stop": [
      {
        "command": "scripts/validate-orchestrator-response.sh",
        "description": "統合応答の形式検証"
      }
    ]
  }
}
